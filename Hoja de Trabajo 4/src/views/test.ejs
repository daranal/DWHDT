<!DOCTYPE html>
<html>

<head>
    <title>Formulario de Solicitud de Pasaporte</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>

<body>
    <div class="container mt-5">
        <form id="passportForm">
            <div class="form-group">
                <label class="form-label" for="lblNombre">Nombre:</label>
                <input type="text" class="form-control" id="txtNombre" required>

                <label class="form-label" for="lblApellido">Apellido:</label>
                <input type="text" class="form-control" id="txtApellido" required>

                <span class="form-label" id="lblEdad">Edad: <b>20</b></span>
                <br>
                <input id="rgEdad" class="form-range" type="range" min="18" step="1" max="99" value="20"
                    oninput="updateTextInput(this.value);">
                <br>

                <label class="form-label" for="lblGenero">Genero:</label>
                <select id="txtGenero" class="form-control">
                    <option value="Masculino" class="form-control">Masculino</option>
                    <option value="Femenino" class="form-control">Femenino</option>
                    <option value="Prefiero no especificar" class="form-control">Prefiero no especificar</option>
                </select>
                <label class="form-label" for="lblCumpleanos">Cumpleaños:</label>
                <input type="date" class="form-control" id="txtCumpleanos" required>
                <label class="form-label" for="lblImagen">Imagen de Perfil:</label>
                <input class="form-control" type="file" id="imgperfil" required>
                <label class="form-label" for="lblTelefono">Telefono:</label>
                <input class="form-control" type="tel" id="txtTelefono" name="txtTelefono" placeholder="1234-5678"
                    pattern="[0-9]{4}-[0-9]{4}">
                <br>
            </div>
            <button type="submit" class="btn btn-primary">Enviar Solicitud</button>
        </form>

        <div id="resultados" class="mt-3">

        </div>
    </div>

</body>
<script>
    function updateTextInput() {

        var value1 = document.getElementById("rgEdad").value;
        document.getElementById('lblEdad').innerHTML = "Edad:  " + "<b>" + value1 + "</b>" + " ";
    }

    document.addEventListener("DOMContentLoaded", function () {
        const form = document.getElementById("passportForm");
        const resultadosDiv = document.getElementById("resultados");

        form.addEventListener("submit", function (event) {
            event.preventDefault();
            const nombre = document.getElementById("txtNombre").value;
            const apellido = document.getElementById("txtApellido").value;
            const edad = document.getElementById("rgEdad").value;
            const genero = document.getElementById("txtGenero").value;
            const telefono = document.getElementById("txtTelefono").value;

            resultadosDiv.innerHTML = `
        <h3>Información de Solicitud de Pasaporte</h3>
        <p><strong>Nombre:</strong> ${nombre}</p>
        <p><strong>Apellido:</strong> ${apellido}</p>
        <p><strong>Edad:</strong> ${edad}</p>  
        <p><strong>Genero:</strong> ${genero}</p>
        <p><strong>telefono:</strong> ${telefono}</p>
        <img id="imgperfilupload" src="#" alt="your image"/>
        `;
            const [file] = document.getElementById("imgperfil").files;
            if (file) {
                imgperfilupload.src = URL.createObjectURL(file)
            }
        });
    });



</script>


</html>